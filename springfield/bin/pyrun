#!/usr/bin/env bash

set -eu

args="$@"

export TF_CPP_MIN_LOG_LEVEL="2"

# Copy files from persistent storage to boost I/O performance.
echo "Copying data... "
cp -r /storage/nemo/data /data

# Execute command.
echo "Executing python with args"
echo "  ${args}"
python3.8 $args

# Copy local results to persistent storage.
# ...
